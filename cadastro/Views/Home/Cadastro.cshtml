
@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Advanced login -->
<form action="index.html">
    <div class="panel panel-body login-form">
        <div class="text-center">
            <div class="icon-object border-success text-success"><i class="icon-plus3"></i></div>
            <h5 class="content-group">Crie sua conta <small class="display-block">Todos os campos são obrigatórios</small></h5>
        </div>

        <div class="content-divider text-muted form-group"><span>Seus dados</span></div>

        <div class="form-group has-feedback has-feedback-left">
            <input type="text" class="form-control" id="txtNomeCompleto" placeholder="Nome completo">
            <div class="form-control-feedback">
                <i class="icon-user-check text-muted"></i>
            </div>

        </div>

        <div class="form-group has-feedback has-feedback-left">
            <input type="text" class="form-control" id="txtEmail" placeholder="Seu email">
            <div class="form-control-feedback">
                <i class="icon-mention text-muted"></i>
            </div>
        </div>

        <div class="form-group has-feedback has-feedback-left">
            <input type="password" class="form-control" id="txtSenha" placeholder="Senha" autocomplete="on">
            <div class="form-control-feedback">
                <i class="icon-user-lock text-muted"></i>
            </div>
        </div>

        <div class="form-group has-feedback has-feedback-left">
            <input type="password" class="form-control" id="txtRepetirSenha" placeholder="Repetir Senha" autocomplete="on">
            <div class="form-control-feedback">
                <i class="icon-user-lock text-muted"></i>
            </div>
        </div>

        <div class="content-divider text-muted form-group"><span>Dados Pessoais</span></div>



        <div class="form-group has-feedback has-feedback-left">
            <input type="text" class="form-control" id="txtEndereco" placeholder="Seu endereço">
            <div class="form-control-feedback">
                <i class="icon-address-book text-muted"></i>
            </div>
        </div>

        <div class="form-group has-feedback has-feedback-left">
            <input type="text" class="form-control" id="txtIdade" placeholder="Sua idade">
            <div class="form-control-feedback">
                <i class="icon-person text-muted"></i>
            </div>
        </div>


        <input type="button" class="btn bg-teal btn-block btn-lg" value="SALVAR" id="btnSalvar">
    </div>
</form>
<!-- /advanced login -->
